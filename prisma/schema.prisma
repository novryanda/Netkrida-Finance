// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

// =====================
// ENUMS
// =====================

enum UserRole {
  ADMIN
  FINANCE
  STAFF
}

enum ProjectStatus {
  ACTIVE
  COMPLETED
  CANCELLED
  ON_HOLD
}

enum ExpenseType {
  DIRECT
  REIMBURSEMENT
}

enum ReimbursementStatus {
  PENDING
  REVIEWED
  APPROVED
  PAID
  REJECTED
}

enum DirectExpenseStatus {
  PENDING
  APPROVED
  PAID
  REJECTED
}

enum ExpenseSourceType {
  REIMBURSEMENT
  DIRECT_EXPENSE
}

// =====================
// USER & AUTH MODELS
// =====================

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  imagePublicId String?   // Cloudinary public_id
  password      String?   // Hashed password for credentials login
  // Finance System fields
  role          UserRole  @default(STAFF)
  bankName      String?
  bankAccountNo String?
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]
  posts         Post[]

  // Finance System relations
  createdProjects     Project[]              @relation("CreatedProjects")
  submittedReimburse  Reimbursement[]        @relation("SubmittedReimbursements")
  reviewedReimburse   Reimbursement[]        @relation("ReviewedReimbursements")
  approvedReimburse   Reimbursement[]        @relation("ApprovedReimbursements")
  paidReimburse       Reimbursement[]        @relation("PaidReimbursements")
  projectRevisions    ProjectRevision[]
  createdCategories   ExpenseCategory[]      @relation("CreatedCategories")
  createdDirectExpenses DirectExpenseRequest[] @relation("CreatedDirectExpenses")
  approvedDirectExpenses DirectExpenseRequest[] @relation("ApprovedDirectExpenses")
  paidDirectExpenses   DirectExpenseRequest[] @relation("PaidDirectExpenses")
  recordedExpenses    Expense[]              @relation("RecordedExpenses")
}

model Account {
    id                       String  @id @default(cuid())
    userId                   String
    type                     String
    provider                 String
    providerAccountId        String
    refresh_token            String?
    access_token             String?
    expires_at               Int?
    token_type               String?
    scope                    String?
    id_token                 String?
    session_state            String?
    user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
    refresh_token_expires_in Int?

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    @@index([name])
}

// =====================
// FINANCE SYSTEM MODELS
// =====================

model Project {
  id           String        @id @default(cuid())
  projectName  String
  clientName   String
  projectValue Decimal       @db.Decimal(15, 2)
  deadline     DateTime
  status       ProjectStatus @default(ACTIVE)
  description  String?       @db.Text

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  createdBy    User          @relation("CreatedProjects", fields: [createdById], references: [id])
  createdById  String

  expenses         Expense[]
  projectRevisions ProjectRevision[]
  reimbursements   Reimbursement[]
  directExpenses   DirectExpenseRequest[]

  @@index([status])
  @@index([deadline])
  @@map("project")
}

model ProjectRevision {
  id          String   @id @default(cuid())
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  oldValue    Decimal  @db.Decimal(15, 2)
  newValue    Decimal  @db.Decimal(15, 2)
  reason      String   @db.Text

  changedAt   DateTime @default(now())
  changedBy   User     @relation(fields: [changedById], references: [id])
  changedById String

  @@index([projectId])
  @@map("project_revision")
}

model Expense {
  id              String            @id @default(cuid())
  projectId       String?
  project         Project?          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  categoryId      String
  category        ExpenseCategory   @relation(fields: [categoryId], references: [id])

  sourceType      ExpenseSourceType
  sourceId        String            // reimbursement.id or directExpenseRequest.id
  
  description     String            @db.Text
  amount          Decimal           @db.Decimal(15, 2)
  expenseDate     DateTime
  receiptUrl      String?
  paymentProofUrl String?

  recordedAt      DateTime          @default(now())
  recordedBy      User              @relation("RecordedExpenses", fields: [recordedById], references: [id])
  recordedById    String

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@index([projectId])
  @@index([categoryId])
  @@index([sourceType])
  @@index([expenseDate])
  @@map("expense")
}

model Reimbursement {
  id          String              @id @default(cuid())
  projectId   String
  project     Project             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  amount      Decimal             @db.Decimal(15, 2)
  description String              @db.Text
  expenseDate DateTime
  receiptUrl  String

  status      ReimbursementStatus @default(PENDING)

  submittedAt   DateTime          @default(now())
  submittedBy   User              @relation("SubmittedReimbursements", fields: [submittedById], references: [id])
  submittedById String

  reviewedAt    DateTime?
  reviewedBy    User?             @relation("ReviewedReimbursements", fields: [reviewedById], references: [id])
  reviewedById  String?
  reviewNotes   String?           @db.Text

  approvedAt    DateTime?
  approvedBy    User?             @relation("ApprovedReimbursements", fields: [approvedById], references: [id])
  approvedById  String?
  approvalNotes String?           @db.Text

  paidAt           DateTime?
  paidBy           User?         @relation("PaidReimbursements", fields: [paidById], references: [id])
  paidById         String?
  paymentProofUrl  String?
  paymentNotes     String?       @db.Text

  rejectionReason  String?       @db.Text
  rejectedBy       String?       // userId who rejected (FINANCE or ADMIN)
  rejectedAt       DateTime?

  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  @@index([status])
  @@index([submittedById])
  @@index([projectId])
  @@map("reimbursement")
}

model ExpenseCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?  @db.Text
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User     @relation("CreatedCategories", fields: [createdById], references: [id])
  createdById String

  expenses       Expense[]
  directExpenses DirectExpenseRequest[]

  @@index([isActive])
  @@map("expense_category")
}

model DirectExpenseRequest {
  id          String              @id @default(cuid())
  projectId   String?
  project     Project?            @relation(fields: [projectId], references: [id], onDelete: SetNull)
  
  categoryId  String
  category    ExpenseCategory     @relation(fields: [categoryId], references: [id])

  amount      Decimal             @db.Decimal(15, 2)
  description String              @db.Text
  expenseDate DateTime
  invoiceUrl  String              // Invoice/nota sebelum bayar (required)

  status      DirectExpenseStatus @default(PENDING)

  createdAt   DateTime            @default(now())
  createdBy   User                @relation("CreatedDirectExpenses", fields: [createdById], references: [id])
  createdById String

  approvedAt    DateTime?
  approvedBy    User?             @relation("ApprovedDirectExpenses", fields: [approvedById], references: [id])
  approvedById  String?
  approvalNotes String?           @db.Text

  paidAt           DateTime?
  paidBy           User?          @relation("PaidDirectExpenses", fields: [paidById], references: [id])
  paidById         String?
  paymentProofUrl  String?
  paymentDate      DateTime?
  paymentNotes     String?        @db.Text

  rejectionReason  String?        @db.Text
  rejectedAt       DateTime?

  updatedAt   DateTime            @updatedAt

  @@index([status])
  @@index([createdById])
  @@index([projectId])
  @@index([categoryId])
  @@map("direct_expense_request")
}
